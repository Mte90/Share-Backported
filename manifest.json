{

    "description": "This extension reimplement the share feature with Container support and over 14+ social networks",
    "manifest_version": 2,
    "name": "Share Backported",
    "version": "2.0",
    "icons": {
        "16": "icon.svg",
        "24": "icon.svg",
        "48": "icon.svg",
        "96": "icon.svg"
    },
    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "16": "icon.svg",
            "24": "icon.svg",
            "48": "icon.svg",
            "96": "icon.svg"
        },
        "theme_icons": [{
            "dark": "icon.svg",
            "light": "icon-light.svg",
            "size": 16
        },{
            "dark": "icon.svg",
            "light": "icon-light.svg",
            "size": 24
        },{
            "dark": "icon.svg",
            "light": "icon-light.svg",
            "size": 48
        },{
            "dark": "icon.svg",
            "light": "icon-light.svg",
            "size": 96
        }],
        "default_title": "Share",
        "default_popup": "modal/modal.html"
    },
    "page_action": {
        "default_icon": "icon.svg",
        "browser_style": true
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "options_ui": {
        "page": "options/options.html"
    },
    "permissions": [
        "tabs",
        "storage",
        "cookies",
        "management",
        "contextualIdentities",
        "https://www.linkedin.com/*",
        "https://reddit.com/*"
    ]
}
